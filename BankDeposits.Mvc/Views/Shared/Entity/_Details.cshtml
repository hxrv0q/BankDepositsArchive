@model BankDeposits.Mvc.Models.IdentifierEntity

@{
    var modelType = Model.GetType();
    var properties = modelType.GetProperties().Where(p => !p.IsDefined(typeof(BankDeposits.Mvc.Attributes.ExcludeInViewAttribute), true));
    
    ViewData["Title"] = $"Details for {modelType.Name}";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    @foreach (var property in properties)
    {
        <dt class="col-sm-2">@property.Name</dt>
        <dd class="col-sm-10">@property.GetValue(Model)</dd>
    }
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a asp-action="Index">Back to List</a>
</div>